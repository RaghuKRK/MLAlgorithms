

#Simple Linear Regression
#Sample Value
    x <- c(1,2,4,3,5)
    y <- c(1,3,3,2,5)
    n = 5
plot(x=x,y=y,xlim=c(0,6),ylim=c(0,6))
#Calculate Mean of x, y
  meanx=mean(x)
  meanx
  meany=mean(y)
  meany
# Calculate z Score x, y
  x_meanx = x-meanx
  x_meanx
  y_meany = y-meany
  y_meany
#Calculate Slope B1
  numerator<- sum(x_meanx*y_meany)
  numerator 
  denominator <- sum(x_meanx ^ 2)
  denominator
  B1 <- numerator/denominator
  B1
#Caclulate Intercept B0
  #B0 <- mean(y) - B1 * mean(x)
  B0 <- meany - B1 * meanx
  B0
# Making Predictions
  predicted_y = B0 + B1 * x
  predicted_y
#Calculate the error Score for the Predictions called 
#Root Mean Squared Error or RMSE
  squared_error <- (predicted_y-y)^2
  squared_error
RMSE <-  sqrt(sum(squared_error)/n)
RMSE
#B0 - Slope
#B1 - Intercept
  plot(x=x,y=y,xlim=c(0,6),ylim=c(0,6))
#Draw the linear regression line
  #abline(intercept,slope)
  abline(B1,B0)
